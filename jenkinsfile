def remote = [:]
remote.name = 'ubuntu'
remote.host = '54.146.153.218'
remote.user = 'ubuntu'
remote.identityFile = '/var/jenkins_home/.ssh/id_rsa'
remote.allowAnyHosts = true
remote.agentForwarding = true

pipeline{
    agent any
    stages{
        stage("push docker image to repo"){
            steps{
                script{
                        withCredentials([usernamePassword(credentialsId: 'docker-hub', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                            sh "docker build -t mar97/session-node-app:latest ."
                            sh "echo $PASSWORD | docker login -u $USERNAME  --password-stdin"
                            sh "docker push  mar97/session-node-app:latest"
                        }
                }
            }
            post{
                success{
                    echo "bulid done successfull"
                }
                failure{
                    echo "bulid fail successfull"
                }
            }
        }
        stage("execute ansible playbook") {
            steps {
                script {
                    echo "calling ansible playbook to configure ec2 instances"
                    sh "whoami"
                    sh "ls -l /var/jenkins_home/.ssh"
                    sh "ssh -i /var/jenkins_home/.ssh/id_rsa ubuntu@54.160.202.144 ansible-playbook ./session/session-node/update-docker-playbook.yaml"
                    }
                }
            }
    }
    post{
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}